- if ENV['CHARGIFY_HOST_URL']
  - @appConfig['chargify'] = {}
  - @appConfig['chargify']['host'] = ENV['CHARGIFY_HOST_URL']

  - @appConfig['chargify']['plans'] = {}
  - @appConfig['chargify']['plans']['standard'] = {}
  - @appConfig['chargify']['plans']['standard']['name'] = ENV['CHARGIFY_STANDARD_PLAN_NAME']
  - @appConfig['chargify']['plans']['standard']['path'] = ENV['CHARGIFY_STANDARD_PLAN_PATH']
  - @appConfig['chargify']['plans']['plus'] = {}
  - @appConfig['chargify']['plans']['plus']['name'] = ENV['CHARGIFY_PLUS_PLAN_NAME']
  - @appConfig['chargify']['plans']['plus']['path'] = ENV['CHARGIFY_PLUS_PLAN_PATH']
